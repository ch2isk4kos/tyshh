<h1>New Hot Take</h1>

<div class="#">
    <%= form_for @post do |f|%>
        <p>
            <%= f.label :title %>: </br>
            <%= f.text_field :title %>
        </p>
        <p>
            <%= f.label :body %>: </br>
            <%= f.text_area :body %>
        </p>

        <%= f.submit "Submit Take" %>

    <% end %>
</div>


<div class="#">
    <%= link_to "Cancel", posts_path %>
</div>
