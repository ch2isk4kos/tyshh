<h1>New Hot Take</h1>

<div class="#">
    <%= form_for @post do |f|%>
        <% if @post.errors.any? %>
            <div id="errors">
                <h2><%= pluralize(@post.errors.count, "error") %> is holdin' you up bro.</h2>
                <ul>
                    <% @post.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <p>
            <%= f.label :title %>: </br>
            <%= f.text_field :title %>
        </p>
        <p>
            <%= f.label :body %>: </br>
            <%= f.text_area :body %>
        </p>

        <%= f.submit "Submit Take" %>

    <% end %>
</div>


<button type="button" name="button">
    <%= link_to "Cancel", posts_path %>
</button>
